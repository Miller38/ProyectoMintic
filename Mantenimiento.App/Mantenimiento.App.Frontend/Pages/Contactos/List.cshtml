@page
@model Mantenimiento.App.Frontend.Pages.ListModel
@{
    ViewData["Title"] = "Lista de contactos";
}

<body class="fondo1">
</body>
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de contactos</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-primary" asp-page="/Contactos/Crear">Crear Nuevo Contacto</a>
        </div>
    </div>

    <br />
    <br />
    @if (Model.Personas.Count() > 0)
    {
        <table id="tblPersonass" class="table table-striped table-bordered" style="width: 100%;">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Personas.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Personas.FirstOrDefault().Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Personas.FirstOrDefault().Apellidos)</th>
                    <th>@Html.DisplayNameFor(m => m.Personas.FirstOrDefault().Telefono)</th>                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model.Personas)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => persona.Id)</td>
                        <td>@Html.DisplayFor(m => persona.Nombre)</td>
                        <td>@Html.DisplayFor(m => persona.Apellidos)</td>
                        <td>@Html.DisplayFor(m => persona.Telefono)</td>                        
                        <td>
                            <a class="btn btn-success" asp-page="../Contactos/Detalle" asp-route-id="@persona.Id">Detalle</a>
                            <a class="btn btn-warning" asp-page="../Contactos/Editar" asp-route-id="@persona.Id">Editar</a>
                            <a class="btn btn-danger" asp-page="../Contactos/Borrar" asp-route-id="@persona.Id">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay contactos que mostrar</p>
    }
