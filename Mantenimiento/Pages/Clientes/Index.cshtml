@page
@model Mantenimiento.Pages_Clientes.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h2 class="text-info">Clientes</h2>
<br>
<p>
    <a asp-page="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<br>
<div class="shadow-lg p-3 mb-5 bg-body rounded fondo1">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cliente[0].Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Cliente[0].Apellidos)</th>
            <th>@Html.DisplayNameFor(model => model.Cliente[0].Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Cliente[0].Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Cliente[0].Email)</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cliente) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>
                <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.ID"><i class="fa-solid fa-pen"></i></a> 
                <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.ID"><i class="fa-solid fa-search"></i></a> 
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>