@page
@model Mantenimiento.Pages_Servicios.CreateModel

@{
    ViewData["Title"] = "Crear";
}

<div class="container" style="width: 50%;">
<h2 class="text-info">Crear servicio</h2>
<br>
<br>
<div class="shadow-lg p-3 mb-2 bg-body rounded fondo1">
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Servicio.FechaCreacion" class="control-label"></label>
                <input asp-for="Servicio.FechaCreacion" class="form-control" />
                <span asp-validation-for="Servicio.FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicio.Descripcion" class="control-label"></label>
                <input asp-for="Servicio.Descripcion" class="form-control" />
                <span asp-validation-for="Servicio.Descripcion" class="text-danger"></span>
            </div>
            <!-- Cliente -->
            <div class="form-group">
                <label asp-for="Servicio.Vehiculo" class="control-label"></label>
                <select asp-for="Servicio.Vehiculo" class ="form-control" asp-items="ViewBag.VehiculoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Servicio.Tecnico" class="control-label"></label>
                <select asp-for="Servicio.TecnicoID" class ="form-control" asp-items="ViewBag.TecnicoID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
