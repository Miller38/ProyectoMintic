@page
@model Mantenimiento.Pages_Vehiculos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2 class="text-info">Detalles</h2>
    <br>
    
    <div class="container" style="width: 60%;">
        <div class="shadow-lg p-3 mb-2 bg-body rounded fondo1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Tipo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Tipo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Combustible)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Combustible)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Placa)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Placa)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Cilindraje)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Cilindraje)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Color)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Color)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Cliente)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vehiculo.Cliente.Apellidos)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehiculo.Servicios)
                </dt>
                <dd class="col-sm-10">
                    <table class="table">
                        <tr>
                            <th>FechaCreacion</th>
                            <th>Descripcion</th>
                            <th>Tecnico</th>
                        </tr>
                    @foreach (var item in Model.Vehiculo.Servicios)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tecnico.Nombre)</td>
                        </tr>
                    }
                    </table>
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Vehiculo.VehiculoID">Edit</a>
            <a asp-page="Index" class="btn btn-success">to return</a>
        </div>
    </div>
</div>
</div>
